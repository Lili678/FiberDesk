<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header con gradiente azul -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Atrás -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Atrás"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp" />

        <!-- Título INICIO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INICIO"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Botón Perfil -->
        <ImageView
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Perfil"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp" />

        <!-- Bienvenida -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bienvenido/a, Usuario"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/backButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Barra de búsqueda -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/search_background"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Buscar..."
                android:textSize="14sp"
                android:textColorHint="@color/hint_color"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:background="@android:color/transparent"
                android:inputType="text" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Buscar"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="12dp" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Contenido principal (ScrollView) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Sección de módulos -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/modulesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Botón CLIENTES -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clientsButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_clients"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ticketsButton"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/ic_clients"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_clients"
                        android:contentDescription="Clientes"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="CLIENTES"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/ic_clients"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Botón TICKETS -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ticketsButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_tickets"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/clientsButton"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/ic_tickets"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_tickets"
                        android:contentDescription="Tickets"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="TICKETS"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/ic_tickets"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Botón PAGOS -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/paymentsButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_payments"
                    app:layout_constraintTop_toBottomOf="@id/clientsButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/inventoryButton"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/ic_payments"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_payments"
                        android:contentDescription="Pagos"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="PAGOS"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/ic_payments"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Botón INVENTARIO -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/inventoryButton"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_inventory"
                    app:layout_constraintTop_toBottomOf="@id/ticketsButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/paymentsButton"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/ic_inventory"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_inventory"
                        android:contentDescription="Inventario"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="INVENTARIO"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/ic_inventory"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Sección de actividad reciente -->
            <TextView
                android:id="@+id/recentActivityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actividad Reciente"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/modulesSection"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp" />

            <!-- RecyclerView para tickets e instalaciones pendientes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRecentActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/recentActivityTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false" />

            <!-- Mensaje cuando no hay actividad -->
            <TextView
                android:id="@+id/txtEmptyActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay actividad reciente"
                android:textSize="14sp"
                android:textColor="@color/gray_text"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/recentActivityTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>