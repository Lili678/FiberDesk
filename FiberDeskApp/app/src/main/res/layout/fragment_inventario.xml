<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- No se usa por ahora -->
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white">

        <!-- LinearLayout principal (AHORA cerrado correctamente) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header gradient -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/header_gradient">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bienvenido/a, Operario"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/txtSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resumen de tu actividad"
                        android:textSize="13sp"
                        android:textColor="@android:color/white"
                        android:paddingTop="6dp" />

                </LinearLayout>
            </FrameLayout>

            <!-- Contenido debajo del header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Tarjetas estadísticas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Fila 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Total materiales -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardInstEnProgreso"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_margin="6dp"
                            app:cardBackgroundColor="#E3F2FD"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="3dp"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Instalaciones en progreso"
                                    android:textSize="15sp"
                                    android:textColor="#0D47A1" />

                                <TextView
                                    android:id="@+id/txtInstEnProgreso"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:textColor="#42A5F5"
                                    android:paddingTop="6dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Bajo stock -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardLowStock"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_margin="6dp"
                            app:cardBackgroundColor="#FFEBEE"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="3dp"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Materiales Bajo Stock"
                                    android:textSize="15sp"
                                    android:textColor="#B71C1C" />

                                <TextView
                                    android:id="@+id/txtLowStock"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:textColor="#D32F2F"
                                    android:paddingTop="6dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Fila 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardInstPendientes"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_margin="6dp"
                            app:cardBackgroundColor="#FFF8E1"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="3dp"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Instalaciones Pendientes"
                                    android:textSize="15sp"
                                    android:textColor="#E65100" />

                                <TextView
                                    android:id="@+id/txtInstPendientes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:textColor="#FB8C00"
                                    android:paddingTop="6dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardInstCompletadas"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_margin="6dp"
                            app:cardBackgroundColor="#E8F5E9"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="3dp"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Instalaciones Completadas"
                                    android:textSize="15sp"
                                    android:textColor="#1B5E20" />

                                <TextView
                                    android:id="@+id/txtInstCompletadas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:textColor="#43A047"
                                    android:paddingTop="6dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

                <!-- Accesos rápidos -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accesos Rápidos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp" />

                <!-- Gestionar Inventario -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGestionarInventario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gestionar Inventario"
                            android:textColor="#1565C0"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Controla tus materiales de trabajo"
                            android:textColor="#6E6E6E"
                            android:textSize="14sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Mis instalaciones -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMisInstalaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mis Instalaciones"
                            android:textColor="#E65100"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver órdenes de trabajo asignadas"
                            android:textColor="#6E6E6E"
                            android:textSize="14sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Información del sistema -->




            </LinearLayout> <!-- CIERRE del LinearLayout con padding="16dp" -->

        </LinearLayout> <!-- CIERRE del LinearLayout principal -->

    </ScrollView>

</layout>