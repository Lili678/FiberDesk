<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F7FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestión de Pagos"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#0D47A1" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Administra los pagos de tus clientes"
                android:textSize="14sp"
                android:textColor="#6E6E6E"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Tarjetas de estadísticas -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Total Pagos -->
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#E3F2FD"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Pagos"
                            android:textSize="13sp"
                            android:textColor="#0D47A1" />

                        <TextView
                            android:id="@+id/tvTotalPagos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="#42A5F5"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Pendientes -->
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#FFEBEE"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendientes"
                            android:textSize="13sp"
                            android:textColor="#B71C1C" />

                        <TextView
                            android:id="@+id/tvPendientes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="#D32F2F"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Parciales -->
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#FFF8E1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Parciales"
                            android:textSize="13sp"
                            android:textColor="#E65100" />

                        <TextView
                            android:id="@+id/tvParciales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="#FB8C00"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Pagados -->
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="#E8F5E9"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pagados"
                            android:textSize="13sp"
                            android:textColor="#1B5E20" />

                        <TextView
                            android:id="@+id/tvPagados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="#43A047"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Lista de pagos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lista de Pagos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:padding="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewPagos"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="8dp"
                    android:clipToPadding="false" />

                <!-- Empty state -->
                <LinearLayout
                    android:id="@+id/emptyState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay pagos registrados"
                        android:textSize="16sp"
                        android:textColor="#6E6E6E"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agrega un nuevo pago"
                        android:textSize="14sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- Loading indicator -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Floating Action Button para agregar nuevo pago -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarPago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Agregar Pago"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
