<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Development: allow cleartext for local backend. Restrict for production. -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.12.172</domain>
    </domain-config>

    <!-- Fallback: allow any cleartext (only for development). Remove in production. -->
    <base-config cleartextTrafficPermitted="true" />
</network-security-config>