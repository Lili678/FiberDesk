<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- CardView con fondo blanco para la informaciÃ³n -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtFolio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2C3E50"
                    android:background="@drawable/ticket_field_background"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/txtCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C3E50"
                    android:textSize="16sp"
                    android:background="@drawable/ticket_field_background"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/txtAsunto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C3E50"
                    android:textSize="16sp"
                    android:background="@drawable/ticket_field_background"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/txtDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C3E50"
                    android:textSize="16sp"
                    android:background="@drawable/ticket_field_background"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/txtPrioridad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C3E50"
                    android:textSize="16sp"
                    android:background="@drawable/ticket_field_background"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/txtTecnico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C3E50"
                    android:textSize="16sp"
                    android:background="@drawable/ticket_field_background"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:text="Estado:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
                    
                <Spinner
                    android:id="@+id/spinnerEstado"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:backgroundTint="#FFFFFF"
            android:textColor="#3F274E"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>
