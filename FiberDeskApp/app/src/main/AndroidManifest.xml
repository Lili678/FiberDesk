<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".FiberDeskApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FiberDeskApp"
        android:usesCleartextTraffic="true">
        
        <!-- LoginActivity como pantalla inicial -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.FiberDeskApp"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegisterActivity -->
        <activity
            android:name=".ui.login.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- RecoverPasswordActivity -->
        <activity
            android:name=".ui.login.RecoverPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- HomeActivity -->
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp" />

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        
        <!-- ServerConfigActivity -->
        <activity
            android:name=".ui.settings.ServerConfigActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="ConfiguraciÃ³n del Servidor" />
        
        <!-- ProfileActivity -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Mi Perfil" />
        
        <!-- InventarioActivity -->
        <activity
            android:name=".ui.inventario.InventarioActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Inventario" />
        
        <!-- PagosActivity -->
        <activity
            android:name=".ui.pagos.PagosActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Pagos" />
        
        <!-- Actividades de Clientes -->
        <activity 
            android:name=".ListaClientesActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Clientes" />
        
        <activity 
            android:name=".MapaPickerActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp" />
        
        <activity 
            android:name=".AgregarClienteActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Agregar Cliente" />
        
        <activity 
            android:name=".DetalleClienteActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Detalle Cliente" />
        
        <!-- Actividades de Tickets -->
        <activity
            android:name=".TicketListActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Tickets" />
        
        <activity
            android:name=".TicketDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Detalle Ticket" />
        
        <activity
            android:name=".TicketNewActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Nuevo Ticket" />
        
        <activity
            android:name=".TicketArchivedActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Tickets Archivados" />
        
        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="TU_CLAVE_API_AQUI" />
            
    </application>

</manifest>

