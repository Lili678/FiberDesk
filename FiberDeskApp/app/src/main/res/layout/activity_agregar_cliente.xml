<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar Nuevo Cliente"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp"/>

            <!-- SecciÃ³n Datos Personales con fondo blanco -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--- Datos Personales ---"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="#673AB7"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del cliente"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Segundo Nombre (opcional)"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/etSegundoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Segundo nombre"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellido Paterno"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/etApellidoPaterno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido paterno"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellido Materno (opcional)"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/etApellidoMaterno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido materno"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TelÃ©fono"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/etTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÃºmero a 10 dÃ­gitos"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo ElectrÃ³nico"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="cliente@email.com"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

            <!-- SecciÃ³n DirecciÃ³n Postal con fondo blanco -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--- DirecciÃ³n Postal ---"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="#673AB7"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calle"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/etCalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre de la calle"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NÃºmero Exterior"
                            android:textColor="@color/black"/>
                        <EditText
                            android:id="@+id/etNumExterior"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="#"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="#757575"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Int. (opcional)"
                            android:textColor="@color/black"/>
                        <EditText
                            android:id="@+id/etNumInterior"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Int."
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="#757575"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colonia"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/etColonia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre de la colonia"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Municipio/DelegaciÃ³n"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/etMunicipio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Municipio o delegaciÃ³n"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado"
                            android:textColor="@color/black"/>
                        <EditText
                            android:id="@+id/etEstado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Estado"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="#757575"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CÃ³digo Postal"
                            android:textColor="@color/black"/>
                        <EditText
                            android:id="@+id/etCP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="00000"
                            android:inputType="number"
                            android:maxLength="5"
                            android:textColor="@color/black"
                            android:textColorHint="#757575"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- SecciÃ³n UbicaciÃ³n Exacta con fondo blanco -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--- UbicaciÃ³n Exacta ---"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="#673AB7"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Las coordenadas se obtienen automÃ¡ticamente al completar la direcciÃ³n"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnMapaManual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—ºï¸ Seleccionar Punto en Mapa"
                    android:backgroundTint="#FF9800"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnObtenerGPS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¡ Usar mi ubicaciÃ³n actual"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnVerMapa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Verificar UbicaciÃ³n en Google Maps"
                    android:backgroundTint="#2196F3"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

            <!-- Campos ocultos para coordenadas -->
            <EditText
                android:id="@+id/etLatitud"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/etLongitud"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Todo"
                android:layout_marginBottom="40dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>