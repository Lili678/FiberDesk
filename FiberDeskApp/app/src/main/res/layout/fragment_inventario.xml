<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- No se usa por ahora -->
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#F0F7FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Bienvenida -->
            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenida, Lilibeth"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/txtSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumen de tu actividad y recursos"
                android:textSize="14sp"
                android:textColor="#6E6E6E"
                android:paddingBottom="16dp" />

            <!-- Tarjetas estadísticas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Fila 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Total materiales -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="#E3F2FD"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Materiales"
                                android:textSize="15sp"
                                android:textColor="#0D47A1" />

                            <TextView
                                android:id="@+id/txtTotalMateriales"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:textColor="#42A5F5"
                                android:paddingTop="6dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Bajo stock -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="#FFEBEE"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Materiales Bajo Stock"
                                android:textSize="15sp"
                                android:textColor="#B71C1C" />

                            <TextView
                                android:id="@+id/txtLowStock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:textColor="#D32F2F"
                                android:paddingTop="6dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Fila 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="#FFF8E1"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Instalaciones Pendientes"
                                android:textSize="15sp"
                                android:textColor="#E65100" />

                            <TextView
                                android:id="@+id/txtInstPendientes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:textColor="#FB8C00"
                                android:paddingTop="6dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="#E8F5E9"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Instalaciones Completadas"
                                android:textSize="15sp"
                                android:textColor="#1B5E20" />

                            <TextView
                                android:id="@+id/txtInstCompletadas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:textColor="#43A047"
                                android:paddingTop="6dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <!-- Accesos rápidos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accesos Rápidos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:paddingTop="20dp"
                android:paddingBottom="8dp" />

            <!-- Gestionar Inventario -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardGestionarInventario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestionar Inventario"
                        android:textColor="#1565C0"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Controla tus materiales de trabajo"
                        android:textColor="#6E6E6E"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Mis instalaciones -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mis Instalaciones"
                        android:textColor="#E65100"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver órdenes de trabajo asignadas"
                        android:textColor="#6E6E6E"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Información del sistema -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información del Sistema"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:paddingTop="20dp"
                android:paddingBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inventario de Materiales"
                        android:textStyle="bold"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestiona cables, conectores, splitters, cajas de empalme y todos los materiales necesarios para instalaciones."
                        android:textColor="#6E6E6E"
                        android:textSize="14sp"
                        android:paddingBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instalaciones Asignadas"
                        android:textStyle="bold"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visualiza y actualiza el estado de tus órdenes de trabajo."
                        android:textColor="#6E6E6E"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</layout>
