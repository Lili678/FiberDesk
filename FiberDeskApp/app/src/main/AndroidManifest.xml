<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <application
        android:name=".FiberDeskApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FiberDeskApp"
        android:usesCleartextTraffic="true">
        
        <!-- LoginActivity como pantalla inicial -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.FiberDeskApp"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegisterActivity -->
        <activity
            android:name=".ui.login.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- RecoverPasswordActivity -->
        <activity
            android:name=".ui.login.RecoverPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- HomeActivity -->
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp" />

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        
        <!-- ServerConfigActivity -->
        <activity
            android:name=".ui.settings.ServerConfigActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="ConfiguraciÃ³n del Servidor" />
        
        <!-- ProfileActivity -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Mi Perfil" />
        
        <!-- InventarioActivity -->
        <activity
            android:name=".ui.inventario.InventarioActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Inventario" />
        
        <!-- PagosActivity -->
        <activity
            android:name=".ui.pagos.PagosActivity"
            android:exported="false"
            android:theme="@style/Theme.FiberDeskApp"
            android:label="Pagos" />
        
        <!-- Actividades de Roberto (Tickets) -->
        <activity 
            android:name=".TicketListActivity" 
            android:exported="false" />
        <activity 
            android:name=".TicketNewActivity" 
            android:exported="false" />
        <activity 
            android:name=".TicketDetailActivity" 
            android:exported="false" />
        <activity 
            android:name=".TicketArchivedActivity"
            android:exported="false" />
    </application>

</manifest>

