<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente Nombre"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_text" />

                <TextView
                    android:id="@+id/txtDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direcci칩n del cliente"
                    android:textSize="13sp"
                    android:textColor="@color/muted_text"
                    android:paddingTop="4dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/estado_badge"
                android:gravity="center" />

        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#E0E0E0" />

        <!-- Materiales usados header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materiales utilizados:"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/accent_text" />

        <!-- Contenedor de materiales (ChipGroup para wrapping autom치tico) -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/flexboxMateriales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleLine="false">

            <!-- Los chips se agregar치n din치micamente -->

        </com.google.android.material.chip.ChipGroup>

        <!-- Texto cuando no hay materiales -->
        <TextView
            android:id="@+id/txtMateriales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin materiales registrados"
            android:textSize="12sp"
            android:textColor="@color/muted_text"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Botones (solo eliminar) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="12dp"
            android:spacing="8dp">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textSize="11sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:backgroundTint="#C62828"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
