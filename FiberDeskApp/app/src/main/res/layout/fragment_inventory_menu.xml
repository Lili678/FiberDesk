<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Si luego quieres variables, se agregan aquí -->
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F7FF"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú de Inventario"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:paddingBottom="16dp" />

            <!-- Card: Ver Materiales -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewList"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver Materiales"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consulta y edita tus materiales de inventario"
                        android:textSize="14sp"
                        android:textColor="#6E6E6E"
                        android:paddingTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Agregar Material -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAdd"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#E8F5E9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agregar Material"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1B5E20" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Añade nuevos materiales al inventario"
                        android:textSize="14sp"
                        android:textColor="#6E6E6E"
                        android:paddingTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Separador -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instalaciones"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:paddingTop="20dp"
                android:paddingBottom="12dp" />

            <!-- Card: Ver Instalaciones -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewInstalaciones"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver Instalaciones"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E65100" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestiona órdenes de trabajo e instalaciones"
                        android:textSize="14sp"
                        android:textColor="#6E6E6E"
                        android:paddingTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</layout>
